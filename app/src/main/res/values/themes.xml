<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lyceum8_Project" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.Lyceum8" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

</resources>